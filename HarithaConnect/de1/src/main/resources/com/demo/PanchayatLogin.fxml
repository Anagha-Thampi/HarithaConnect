<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            prefWidth="1000.0" prefHeight="700.0" fx:controller="com.demo.controllers.PanchayatLoginController"
            style="-fx-background-color: linear-gradient(to bottom, #cde6cd, #a3cfa3);">

    <!-- Top Navigation Bar -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="40"
              style="-fx-background-color: white; -fx-padding: 12;">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="5" HBox.hgrow="ALWAYS">
                    <ImageView fitHeight="25" fitWidth="25" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <!-- Replace with your logo image -->
                            <Image url="@logo.png"/>
                        </image>
                    </ImageView>
                    <Label text="Haritha " style="-fx-font-size:18px; -fx-font-weight:bold; -fx-text-fill:#222;"/>
                    <Label text="Connect" style="-fx-font-size:18px; -fx-font-weight:bold; -fx-text-fill:green;"/>
                </HBox>

                <!-- Navigation buttons instead of labels -->
                <HBox alignment="CENTER_RIGHT" spacing="25" HBox.hgrow="ALWAYS">
                    <Button onAction="#goHome" text="Home" style="-fx-background-color: transparent; -fx-font-size:14px; -fx-cursor:hand;"/>
                    <Button text="About" style="-fx-background-color: transparent; -fx-font-size:14px; -fx-cursor:hand;"/>
                    <Button text="Features" style="-fx-background-color: transparent; -fx-font-size:14px; -fx-cursor:hand;"/>
                    <Button text="Login" style="-fx-background-color: transparent; -fx-font-size:14px; -fx-cursor:hand;"/>
                    <Button text="Contact" style="-fx-background-color: transparent; -fx-font-size:14px; -fx-cursor:hand;"/>

                    <Button text="Get Started"
                            style="-fx-background-color: green; -fx-text-fill: white;
                                   -fx-background-radius: 20; -fx-padding: 6 15 6 15;
                                   -fx-cursor: hand;"/>
                </HBox>
            </children>
        </HBox>
    </top>

    <!-- Center Login Form -->
    <center>
        <!-- StackPane centers the card both horizontally & vertically -->
        <StackPane alignment="CENTER">
            <StackPane maxWidth="380" maxHeight="320"
                       style="-fx-background-color: white; -fx-padding: 30;
                              -fx-background-radius: 10;
                              -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 8, 0, 0, 3);">
                <VBox alignment="CENTER" spacing="15" prefWidth="280">
                    <Label text="Welcome Panchayat User" style="-fx-font-size:20px; -fx-font-weight:bold;"/>

                    <TextField fx:id="usernameField" promptText="Panchayat ID"
                               style="-fx-background-radius: 6; -fx-padding: 8;"/>
                    <PasswordField fx:id="passwordField" promptText="Password"
                                   style="-fx-background-radius: 6; -fx-padding: 8;"/>

                    <Button fx:id="loginButton" onAction="#handleLogin" text="Login"
                            style="-fx-background-color: green; -fx-text-fill: white;
                                   -fx-background-radius: 20; -fx-padding: 8 20 8 20;
                                   -fx-cursor: hand;">
                        <tooltip>
                            <Tooltip text="Click to login"/>
                        </tooltip>
                    </Button>

                    <HBox alignment="CENTER" spacing="15">
                        <Hyperlink text="Create an Account" onAction="#goToRegister"/>
                        <Hyperlink text="Forgot Password?" onAction="#goToForgotPassword"/>
                    </HBox>
                </VBox>
            </StackPane>
        </StackPane>
    </center>

    <!-- Footer -->
    <bottom>
        <HBox alignment="CENTER"
              style="-fx-background-color: #2d6a2d; -fx-padding: 10;">
            <Label text="Quick Links   |   Privacy Policy   |   Email: support@Service   |   Support   |   Copyright Â© 2025 Connect   |   Phone: +91-XXXXXXXXXX"
                   style="-fx-text-fill: white; -fx-font-size: 12px;"/>
        </HBox>
    </bottom>

</BorderPane>