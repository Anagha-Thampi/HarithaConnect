<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.demo.controllers.SchedulePickupController"
            prefWidth="900.0" prefHeight="600.0"
            style="-fx-background-color: #f0f8f2;">

    <!-- ========== Top Bar ========== -->
    <top>
        <HBox spacing="10" style="-fx-background-color: #e6f5ea;">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>

            <Button fx:id="backToDashboardButton" text="← Back to Dashboard"
                    style="-fx-background-color: white; -fx-border-color: #5ca56c; -fx-text-fill: #5ca56c;"/>

            <Label text="Haritha Connect"
                   style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #355e3b;"/>

            <Pane HBox.hgrow="ALWAYS"/>

            <MenuButton fx:id="profileMenuButton" text="Profile"
                        style="-fx-background-color: transparent; -fx-text-fill: #355e3b; -fx-font-weight: bold;">
                <items>
                    <MenuItem fx:id="logoutMenuItem" text="Logout"/>
                </items>
            </MenuButton>
        </HBox>
    </top>

    <!-- ========== Center Content ========== -->
    <center>
        <VBox spacing="20" alignment="TOP_CENTER">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>

            <!-- Success Message -->
            <Label fx:id="successMessage"
                   text="Your doorstep pickup has been scheduled successfully!"
                   visible="false"
                   style="-fx-background-color: #d1f5d3; -fx-text-fill: #2d6a4f; -fx-padding: 10; -fx-font-weight: bold; -fx-background-radius: 5;"/>

            <Label text="Schedule Doorstep Pickup"
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #355e3b;"/>

            <Label text="Choose your ward and book your waste collection"
                   style="-fx-font-size: 14px; -fx-text-fill: #355e3b;"/>

            <!-- Ward Selection -->
            <HBox spacing="10" alignment="CENTER">
                <Label text="Select Ward:" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                <ComboBox fx:id="wardComboBox" promptText="Select Ward" prefWidth="200.0"/>
                <Button fx:id="loadSlotsButton" text="Load Slots"
                        style="-fx-background-color: #5ca56c; -fx-text-fill: white;"/>
            </HBox>

            <!-- Time Slot Grid -->
            <GridPane fx:id="timeSlotGrid" hgap="10" vgap="10" visible="false"
                      style="-fx-background-color: white; -fx-padding: 20; -fx-border-color: #cdeccd; -fx-border-radius: 5;">
                <columnConstraints>
                    <ColumnConstraints percentWidth="25"/>
                    <ColumnConstraints percentWidth="25"/>
                    <ColumnConstraints percentWidth="25"/>
                    <ColumnConstraints percentWidth="25"/>
                </columnConstraints>
            </GridPane>

            <!-- Confirm Button -->
            <Button fx:id="confirmPickupButton" text="Confirm Pickup"
                    visible="false"
                    style="-fx-background-color: #5ca56c; -fx-text-fill: white; -fx-padding: 10 30; -fx-font-weight: bold;"/>
        </VBox>
    </center>

    <!-- ========== Scheduled Pickups Sidebar ========== -->
    <right>
        <VBox fx:id="scheduledPickupBox" spacing="10" visible="false"
              style="-fx-background-color: white; -fx-border-color: #cdeccd; -fx-border-radius: 5;">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Label text="Your Scheduled Pickups"
                   style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #355e3b;"/>
            <VBox fx:id="pickupListBox" spacing="10"/>
        </VBox>
    </right>

</BorderPane>

