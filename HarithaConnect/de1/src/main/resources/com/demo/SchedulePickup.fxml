<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefWidth="500.0" prefHeight="300.0" alignment="CENTER" spacing="15" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.demo.controllers.SchedulePickupController">
   <Button fx:id="dashbutton" onAction="#goDash" alignment="TOP_LEFT" mnemonicParsing="false" text="Back" />

    <Label style="-fx-font-size:20px; -fx-font-weight:bold;" text="Schedule Pickup" />

    <HBox spacing="10">
        <Label text="Select Date:" />
        <DatePicker fx:id="pickupDate" />
    </HBox>

    <HBox spacing="10">
        <Label text="Select Time:" />
        <ChoiceBox fx:id="pickupTime" />
    </HBox>

    <Button onAction="#confirmPickup" style="-fx-background-color:#4CAF50; -fx-text-fill:white;" text="Confirm Pickup" />

    <Label fx:id="statusLabel" style="-fx-text-fill:green;" text="" />
</VBox>
