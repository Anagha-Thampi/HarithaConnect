<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="700.0" prefWidth="1000.0" style="-fx-background-color: linear-gradient(to bottom, #e5f2e5, #cde6cd);" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.demo.controllers.WorkerDashController">

    <!-- Top Navigation Bar -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: white; -fx-padding: 12;">
            <children>
                <!-- Left: Logo -->
                <HBox alignment="CENTER_LEFT" spacing="5" HBox.hgrow="ALWAYS">
                    <ImageView fitHeight="35.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <!-- Replace with logo path -->
                            <Image url="@logo.png" />
                        </image>
                    </ImageView>
                    <Label style="-fx-font-size:18px; -fx-font-weight:bold; -fx-text-fill:#222;" text="Haritha " />
                    <Label style="-fx-font-size:18px; -fx-font-weight:bold; -fx-text-fill:green;" text="Connect" />
                </HBox>

                <!-- Right: Icons -->
                <HBox alignment="CENTER_RIGHT" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="30.0" prefWidth="114.0" spacing="20">
                    <ImageView fitHeight="30.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <!-- Replace with profile icon -->
                            <Image url="@profile.png" />
                        </image>
                    </ImageView>
                    <ImageView fitHeight="28.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <!-- Replace with notification bell icon -->
                            <Image url="@bell.png" />
                        </image>
                    </ImageView>
                </HBox>
            </children>
        </HBox>
    </top>

    <!-- Center Content -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="30" style="-fx-padding: 40;">
            <!-- Page Title -->
            <Label prefHeight="50.0" prefWidth="343.0" style="-fx-font-size:22px; -fx-font-weight:bold; -fx-text-fill:#1a381a;" text="Welcome Kudumbasree Worker!" VBox.vgrow="NEVER" />

            <!-- Responsive Cards -->
            <TilePane alignment="CENTER" hgap="30" prefColumns="3" prefHeight="329.0" prefWidth="987.0" style="-fx-padding: 20;" vgap="30">
                <!-- Card 1 -->
                <VBox alignment="CENTER" prefHeight="233.0" prefWidth="255.0" spacing="15" style="-fx-background-color: white; -fx-background-radius: 10;                              -fx-border-color: #a3cfa3; -fx-border-radius: 10;                              -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 6, 0, 0, 2);">
                    <ImageView fitHeight="85.0" fitWidth="72.0" preserveRatio="true">
                        <image>
                            <!-- Replace with complaint icon -->
                            <Image url="@report.png" />
                        </image>
                    </ImageView>
                    <Label prefHeight="20.0" prefWidth="166.0" style="-fx-font-size:14px; -fx-font-weight:bold;" text="Add available Time Slots" textAlignment="CENTER">
                  <opaqueInsets>
                     <Insets left="8.0" />
                  </opaqueInsets></Label>
                    <Button fx:id="viewComplaintsButton" onAction="#handleaddslots" style="-fx-background-color: #4CAF50; -fx-text-fill: white;                                    -fx-background-radius: 8; -fx-padding: 6 14 6 14; -fx-cursor: hand;" text="View Details" />
                </VBox>

                <!-- Card 2 -->
                <VBox alignment="CENTER" prefHeight="200" prefWidth="200" spacing="15" style="-fx-background-color: white; -fx-background-radius: 10;                              -fx-border-color: #a3cfa3; -fx-border-radius: 10;                              -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 6, 0, 0, 2);">
                    <ImageView fitHeight="97.0" fitWidth="85.0" preserveRatio="true">
                        <image>
                            <!-- Replace with reports icon -->
                            <Image url="@dp.png" />
                        </image>
                    </ImageView>
                    <Label prefHeight="2.0" prefWidth="122.0" style="-fx-font-size:14px; -fx-font-weight:bold;" text="Real-Time Reports" />
                    <Button fx:id="viewReportsButton" onAction="#handleViewReports" style="-fx-background-color: #4CAF50; -fx-text-fill: white;                                    -fx-background-radius: 8; -fx-padding: 6 14 6 14; -fx-cursor: hand;" text="View Reports" />
                </VBox>

                <!-- Card 3 -->
                <VBox alignment="CENTER" prefHeight="200" prefWidth="200" spacing="15" style="-fx-background-color: white; -fx-background-radius: 10;                              -fx-border-color: #a3cfa3; -fx-border-radius: 10;                              -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 6, 0, 0, 2);">
                    <ImageView fitHeight="66.0" fitWidth="76.0" preserveRatio="true">
                        <image>
                            <!-- Replace with leaderboard icon -->
                            <Image url="@sp.png" />
                        </image>
                    </ImageView>
                    <Label prefHeight="20.0" prefWidth="125.0" style="-fx-font-size:14px; -fx-font-weight:bold;" text="Scheduled Pickups" />
                    <Button fx:id="viewLeaderboardButton" onAction="#handleViewBooked" style="-fx-background-color: #4CAF50; -fx-text-fill: white;                                    -fx-background-radius: 8; -fx-padding: 6 14 6 14; -fx-cursor: hand;" text="View Leaderboard" />
                </VBox>
            </TilePane>
        </VBox>
    </center>
</BorderPane>
