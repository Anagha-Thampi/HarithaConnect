<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.demo.controllers.PanchayatDashController" prefHeight="700.0" prefWidth="1000.0"
            style="-fx-background-color: linear-gradient(to bottom, #e5f2e5, #cde6cd);">

    <!-- Top Navigation Bar -->
    <top>
        <HBox spacing="20" alignment="CENTER_LEFT"
              style="-fx-background-color: white; -fx-padding: 12;">
            <children>
                <!-- Left: Logo -->
                <HBox alignment="CENTER_LEFT" spacing="5" HBox.hgrow="ALWAYS">
                    <ImageView fitHeight="25" fitWidth="25" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <!-- Replace with logo path -->
                            <Image url="@logo.png"/>
                        </image>
                    </ImageView>
                    <Label text="Haritha " style="-fx-font-size:18px; -fx-font-weight:bold; -fx-text-fill:#222;"/>
                    <Label text="Connect" style="-fx-font-size:18px; -fx-font-weight:bold; -fx-text-fill:green;"/>
                </HBox>

                <!-- Right: Icons -->
                <HBox alignment="CENTER_RIGHT" spacing="20">
                    <ImageView fitHeight="22" fitWidth="22" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <!-- Replace with profile icon -->
                            <Image url="@profile.png"/>
                        </image>
                    </ImageView>
                    <ImageView fitHeight="22" fitWidth="22" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <!-- Replace with notification bell icon -->
                            <Image url="@bell.png"/>
                        </image>
                    </ImageView>
                </HBox>
            </children>
        </HBox>
    </top>

    <!-- Center Content -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="30" style="-fx-padding: 40;">
            <!-- Page Title -->
            <Label text="Your Community at a Glance"
                   style="-fx-font-size:22px; -fx-font-weight:bold; -fx-text-fill:#1a381a;"/>

            <!-- Responsive Cards -->
            <TilePane alignment="CENTER" hgap="30" vgap="30"
                      prefColumns="3"
                      style="-fx-padding: 20;">
                <!-- Card 1 -->
                <VBox alignment="CENTER" spacing="15" prefWidth="200" prefHeight="200"
                      style="-fx-background-color: white; -fx-background-radius: 10;
                             -fx-border-color: #a3cfa3; -fx-border-radius: 10;
                             -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 6, 0, 0, 2);">
                    <ImageView fitHeight="50" fitWidth="50" preserveRatio="true">
                        <image>
                            <!-- Replace with complaint icon -->
                            <Image url="@report.png"/>
                        </image>
                    </ImageView>
                    <Label text="Review Complaints" style="-fx-font-size:14px; -fx-font-weight:bold;"/>
                    <Button fx:id="viewComplaintsButton" onAction="#handleViewComplaints" text="View Details"
                            style="-fx-background-color: #4CAF50; -fx-text-fill: white;
                                   -fx-background-radius: 8; -fx-padding: 6 14 6 14; -fx-cursor: hand;"/>
                </VBox>

                <!-- Card 2 -->
                <VBox alignment="CENTER" spacing="15" prefWidth="200" prefHeight="200"
                      style="-fx-background-color: white; -fx-background-radius: 10;
                             -fx-border-color: #a3cfa3; -fx-border-radius: 10;
                             -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 6, 0, 0, 2);">
                    <ImageView fitHeight="50" fitWidth="50" preserveRatio="true">
                        <image>
                            <!-- Replace with reports icon -->
                            <Image url="@dp.png"/>
                        </image>
                    </ImageView>
                    <Label text="Real-Time Reports" style="-fx-font-size:14px; -fx-font-weight:bold;"/>
                    <Button fx:id="viewReportsButton" onAction="#handleViewReports" text="View Reports"
                            style="-fx-background-color: #4CAF50; -fx-text-fill: white;
                                   -fx-background-radius: 8; -fx-padding: 6 14 6 14; -fx-cursor: hand;"/>
                </VBox>

                <!-- Card 3 -->
                <VBox alignment="CENTER" spacing="15" prefWidth="200" prefHeight="200"
                      style="-fx-background-color: white; -fx-background-radius: 10;
                             -fx-border-color: #a3cfa3; -fx-border-radius: 10;
                             -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 6, 0, 0, 2);">
                    <ImageView fitHeight="50" fitWidth="50" preserveRatio="true">
                        <image>
                            <!-- Replace with leaderboard icon -->
                            <Image url="@clea.png"/>
                        </image>
                    </ImageView>
                    <Label text="Cleanest Street" style="-fx-font-size:14px; -fx-font-weight:bold;"/>
                    <Button fx:id="viewLeaderboardButton" onAction="#handleViewLeaderboard" text="View Leaderboard"
                            style="-fx-background-color: #4CAF50; -fx-text-fill: white;
                                   -fx-background-radius: 8; -fx-padding: 6 14 6 14; -fx-cursor: hand;"/>
                </VBox>
            </TilePane>
        </VBox>
    </center>
</BorderPane>
