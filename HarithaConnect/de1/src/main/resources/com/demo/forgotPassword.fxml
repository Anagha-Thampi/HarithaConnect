<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane  prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" >

    <!-- Top Navigation Bar -->
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="51.0" prefWidth="1000.0" spacing="20" style="-fx-background-color: #e6f0e6;">
            <padding>
                <Insets bottom="10" left="20" right="20" top="10" />
            </padding>

            <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2e7d32;" text="🌿 Haritha Connect" />
            <Pane HBox.hgrow="ALWAYS" />
            <Button style="-fx-background-color: transparent; -fx-text-fill: #2e7d32;" text="Home" />
            <Button style="-fx-background-color: transparent; -fx-text-fill: #2e7d32;" text="About" />
            <Button style="-fx-background-color: transparent; -fx-text-fill: #2e7d32;" text="Login" />
            <Button style="-fx-background-color: #2e7d32; -fx-text-fill: white; -fx-background-radius: 5;" text="Get Started" />
        </HBox>
    </top>

    <!-- Center Forgot Password Box -->
    <center>
        <VBox alignment="CENTER" maxHeight="-Infinity" spacing="20" style="-fx-background-color: #f0f5f0;">
            <padding>
                <Insets bottom="50" top="50" />
            </padding>

            <VBox alignment="CENTER" maxWidth="-Infinity" prefHeight="267.0" prefWidth="369.0" spacing="15" style="-fx-background-color: white; -fx-padding: 30; -fx-border-radius: 10; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10,0,0,3);">

                <Text style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-fill: #2e7d32;" text="Forgot Your Password?" />
                <Label style="-fx-text-fill: gray;" text="Enter your registered email to reset your password." />

                <TextField fx:id="emailField" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="27.0" prefWidth="457.0" promptText="Enter your email" style="-fx-pref-width: 250; -fx-padding: 5;" />

                <Button fx:id="sendButton" style="-fx-background-color: #2e7d32; -fx-text-fill: white; -fx-background-radius: 5; -fx-pref-width: 200;" text="Send Password Reset Link" />

                <Hyperlink fx:id="backToLogin" style="-fx-text-fill: #2e7d32;" text="← Back to Login" />
            </VBox>
        </VBox>
    </center>

    <!-- Footer -->
    <bottom>
        <HBox alignment="CENTER" spacing="10" style="-fx-background-color: #2e7d32;">
            <padding>
                <Insets bottom="10" top="10" />
            </padding>
            <Label style="-fx-text-fill: white;" text="Privacy Policy | Support | Contact Us" />
        </HBox>
    </bottom>

</BorderPane>
