<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane prefWidth="1000.0" prefHeight="700.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" >

    <!-- Top Navigation Bar -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #f4f8f4;">
            <padding>
                <Insets bottom="10" left="20" right="20" top="10" />
            </padding>

            <ImageView fitHeight="30" fitWidth="30">
                <Image url="@logo.png" /> <!-- Optional logo file -->
            </ImageView>
            <Label style="-fx-text-fill: #2e7d32; -fx-font-weight: bold; -fx-font-size: 18px;" text="Haritha Connect" />
            <Pane HBox.hgrow="ALWAYS" />

            <Button style="-fx-background-color: transparent; -fx-font-size: 16px; -fx-text-fill: #2e7d32;" text="ðŸ‘¤" />
            <Button style="-fx-background-color: transparent; -fx-text-fill: #2e7d32; -fx-font-size: 14px;" text="Logout" />
        </HBox>
    </top>

    <!-- Center Section -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="20" style="-fx-background-color: #e6f2e6;">
            <padding>
                <Insets bottom="30" left="40" right="40" top="30" />
            </padding>

            <!-- Heading -->
            <VBox alignment="CENTER_LEFT" spacing="5">
                <Text style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-fill: #2e7d32;" text="View Cleanest Streets in Your Panchayat" />
                <Label style="-fx-text-fill: #333333;" text="See streets ranked by their cleanliness based on dump reports." />
            </VBox>

            <!-- Cleanest Street Box -->
            <HBox alignment="CENTER" style="-fx-background-color: #ffffff; -fx-padding: 15;                                               -fx-background-radius: 10; -fx-border-color: #d9ead3;                                               -fx-border-radius: 10;">
                <Label style="-fx-text-fill: #2e7d32; -fx-font-size: 16px; -fx-font-weight: bold;" text="ðŸ† The Cleanest Street is " />
                <Label text="  " />
                <Label fx:id="cleanestPercentLabel" style="-fx-text-fill: #2e7d32; -fx-font-size: 14px;" />
            </HBox>

            <!-- Table Section -->
            <TableView fx:id="streetsTable" prefWidth="600" style="-fx-background-radius: 10; -fx-background-color: white;">
                <columns>
                    <TableColumn fx:id="rankCol" prefWidth="80" text="Rank" />
                    <TableColumn fx:id="streetNameCol" prefWidth="260" text="Street Name" />
                    <TableColumn fx:id="cleanedCol" prefWidth="180" text="Dump % Cleaned" />
                </columns>
            </TableView>
        </VBox>
    </center>

</BorderPane>
