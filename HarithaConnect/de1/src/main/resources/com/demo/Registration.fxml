<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.demo.controllers.RegistrationController"
            stylesheets="@styles.css"
            prefWidth="1000.0" prefHeight="700.0">

    <!-- ========== TOP NAVIGATION BAR ========== -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="30" styleClass="navbar">
            <padding>
                <Insets bottom="10" left="20" right="20" top="10" />
            </padding>

            <!-- Logo -->
            <Label styleClass="logo" text="Haritha Connect" />

            <Region HBox.hgrow="ALWAYS" /> <!-- Push nav items to right -->

            <!-- Navigation Buttons -->
            <Button onAction="#goHome" styleClass="nav-button" text="Home" />
            <Button onAction="#goAbout" styleClass="nav-button" text="About" />
            <Button onAction="#goLogin" styleClass="nav-button" text="Login" />
            <Button onAction="#goContact" styleClass="nav-button" text="Contact" />
            <Button onAction="#goSignup" styleClass="get-started-button" text="Get Started" />
        </HBox>
    </top>



    <!-- ========== MAIN CENTER CONTENT ========== -->
    <center>
        <VBox alignment="CENTER" spacing="30" styleClass="login-selection-center">

            <!-- Static Heading -->
            <VBox alignment="CENTER" spacing="10">
                <Label text="Register to Haritha Connect" styleClass="main-title"/>
            </VBox>

            <!-- 3 Login Cards Horizontally -->
            <HBox alignment="CENTER" spacing="40">

                <!-- Local Users -->
                <VBox styleClass="login-card" alignment="CENTER" spacing="15">
                    <ImageView fitHeight="50" fitWidth="50">
                        <image>
                            <Image url="@locallogi.png"/>
                        </image>
                    </ImageView>
                    <Label text="Local Users" styleClass="login-card-title"/>
                    <Label text="Residents who want report waste, waste pickups, and subdata about their neighborhood's cleantiness."
                           wrapText="true" styleClass="login-card-description"/>
                    <Button onAction="#loginAsLocalUser" text="Click to Register" styleClass="login-button"/>
                </VBox>

                <!-- Panchayat Officials -->
                <VBox styleClass="login-card" alignment="CENTER" spacing="15">
                    <ImageView fitHeight="50" fitWidth="50">
                        <image>
                            <Image url="@Palogi.png"/>
                        </image>
                    </ImageView>
                    <Label text="Panchayat Officials" styleClass="login-card-title"/>
                    <Label text="Local authorities managing waste reports, coordinating clean-ups, and tracking community progress."
                           wrapText="true" styleClass="login-card-description"/>
                    <Button onAction="#loginAsPanchayatOfficial" text="Click to Register" styleClass="login-button"/>
                </VBox>

                <!-- Kudumbashree Workers -->
                <VBox styleClass="login-card" alignment="CENTER" spacing="15">
                    <ImageView fitHeight="50" fitWidth="50">
                        <image>
                            <Image url="@Klogi.png"/>
                        </image>
                    </ImageView>
                    <Label text="Kudumbashree Workers" styleClass="login-card-title"/>
                    <Label text="Community workers collecting waste, completing scheduled pickups, and helping keep areas clean."
                           wrapText="true" styleClass="login-card-description"/>
                    <Button onAction="#loginAsKudumbashreeWorker" text="Click to Register" styleClass="login-button"/>
                </VBox>
            </HBox>
        </VBox>
    </center>

    <!-- ========== BOTTOM FOOTER ========== -->
    <bottom>
        <HBox styleClass="footer" spacing="50" alignment="CENTER">
            <Label text="Quick Links" styleClass="footer-text"/>
            <Button text="Privacy Policy" styleClass="footer-link"/>
            <Label text="Email: support@Service" styleClass="footer-text"/>
            <Label text="Copyright Â© 2025 Connect" styleClass="footer-text"/>
            <Label text="Phone: +91-XXXXXXXXXX" styleClass="footer-text"/>
        </HBox>
    </bottom>
</BorderPane>