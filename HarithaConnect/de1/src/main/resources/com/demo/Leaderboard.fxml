<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.*?>
<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.demo.controllers.LeaderboardController"
      spacing="15" alignment="CENTER" style="-fx-padding: 20;">
    <Button fx:id="dashbutton" onAction="#goDash" alignment="TOP_LEFT" mnemonicParsing="false" text="Back" />
    <Label text="Cleanest Streets Leaderboard" style="-fx-font-size:20px; -fx-font-weight:bold;"/>

    <TableView fx:id="leaderboardTable">
        <columns>
            <TableColumn text="Rank" fx:id="rankColumn" prefWidth="80"/>
            <TableColumn text="Street" fx:id="streetColumn" prefWidth="200"/>
            <TableColumn text="Points" fx:id="pointsColumn" prefWidth="120"/>
        </columns>
    </TableView>
</VBox>
