<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.WebView?>

<BorderPane prefHeight="700.0" prefWidth="1000.0" style="-fx-background-color: #e8f3e8;"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.demo.controllers.BookedPickupsController">

    <!-- HEADER -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: white;">
            <padding><Insets top="15" bottom="15" left="20" right="20"/></padding>
            <ImageView fx:id="logo" fitHeight="32" fitWidth="38">
                <image><Image url="@logo.png"/></image>
            </ImageView>
            <Label text="Haritha Connect" style="-fx-font-size:20px; -fx-font-weight:bold; -fx-text-fill:#2d5a27;"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button fx:id="backButton" text="Back" style="-fx-background-color:transparent; -fx-font-weight:bold;"/>
            <ImageView fx:id="logo1" fitHeight="40" fitWidth="40">
                <image>
                    <Image url="@../../../Downloads/WhatsApp%20Image%202025-10-20%20at%201.00.56%20PM.jpeg"/>
                </image>
            </ImageView>
        </HBox>
    </top>

    <!-- MAIN CONTENT -->
    <center>
        <HBox spacing="30" style="-fx-background-color:#D0F0C0;">
            <padding><Insets top="30" left="30" right="30" bottom="30"/></padding>

            <!-- LEFT: pickup list + filters -->
            <VBox alignment="TOP_LEFT" spacing="20" prefWidth="450">
                <Label text="View Booked Pickups â€“ Kudumbashree Workers"
                       style="-fx-font-size:24px; -fx-font-weight:bold;"/>
                <HBox spacing="15" alignment="CENTER_LEFT">
                    <ToggleButton fx:id="allFilter" text="All" selected="true"
                                  style="-fx-background-radius:20; -fx-padding:6 15;">
                        <toggleGroup><ToggleGroup fx:id="filterGroup"/></toggleGroup>
                    </ToggleButton>
                    <ToggleButton fx:id="pendingFilter" text="Pending"
                                  style="-fx-background-radius:20; -fx-padding:6 15;"
                                  toggleGroup="$filterGroup"/>
                    <ToggleButton fx:id="completedFilter" text="Completed"
                                  style="-fx-background-radius:20; -fx-padding:6 15;"
                                  toggleGroup="$filterGroup"/>
                </HBox>

                <ScrollPane fitToWidth="true" style="-fx-background-color:transparent;">
                    <VBox fx:id="pickupListContainer" spacing="15">
                        <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
                    </VBox>
                </ScrollPane>
            </VBox>

            <!-- RIGHT: details + map -->
            <VBox fx:id="detailsBox" spacing="15" prefWidth="450"
                  style="-fx-background-color:white; -fx-padding:15; -fx-background-radius:10;">
                <Label text="Select a pickup to view details"
                       style="-fx-font-size:18px; -fx-text-fill:#444; -fx-font-weight:bold;"/>
                <WebView fx:id="mapView" prefHeight="300" prefWidth="430"/>
            </VBox>
        </HBox>
    </center>
</BorderPane>
